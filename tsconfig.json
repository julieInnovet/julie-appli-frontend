{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, // Désactivé si non nécessaire
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Garde "true" si tsc est utilisé uniquement pour les types
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./", // Pour des imports absolus si nécessaire
    "paths": {
      "@components/*": ["src/components/*"], // Exemple pour simplifier les imports
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
